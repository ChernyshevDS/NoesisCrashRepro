<UserControl
    x:Class="Views.EmptyView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:MarkupExtensions"
    xmlns:vm="clr-namespace:ViewModels"
    Background="White">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Command="{Binding CrashBindingCommand}" Content="Crash by MultiBinding"/>

        <Border Background="Gray" x:Name="border">
            <TextBlock Text="Crash by HitTest" Margin="40"/>
        </Border>
    </StackPanel>
</UserControl>